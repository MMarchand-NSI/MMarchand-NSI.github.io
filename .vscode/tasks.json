{
  "version": "2.0.0",
  "tasks": [
    {
        "label": "Deploy MkDocs to GitHub",
        "type": "shell",
        "command": "uv run mkdocs build && uv run mkdocs gh-deploy",
        "options": {
              "cwd": "${workspaceFolder}"
        },
        "group": {
            "kind": "build",
            "isDefault": true
        },
        "problemMatcher": [],
        "detail": "Run MkDocs deploy to GitHub Pages in the current directory"
    },
    {
        "label": "build",
        "type": "shell",
        "command": "uv run mkdocs build",
        "options": {
              "cwd": "${workspaceFolder}"
        },
        "group": {
            "kind": "build",
            "isDefault": true
        },
        "problemMatcher": [],
        "detail": "Run MkDocs deploy to GitHub Pages in the current directory"
    },
    {
        "label": "serve",
        "type": "shell",
        "command": "uv run mkdocs serve",
        "options": {
              "cwd": "${workspaceFolder}"
        },
        "group": {
            "kind": "build",
            "isDefault": true
        },
        "problemMatcher": [],
        "detail": "Run MkDocs deploy to GitHub Pages in the current directory"
    },
    {
        "label": "serve clean",
        "type": "shell",
        "command": "uv run mkdocs serve --clean",
        "options": {
              "cwd": "${workspaceFolder}"
        },
        "group": {
            "kind": "build",
            "isDefault": true
        },
        "problemMatcher": [],
        "detail": "Run MkDocs deploy to GitHub Pages in the current directory"
    }
    ]
}
